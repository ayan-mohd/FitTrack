<StackPane styleClass="login-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fittrack.ui.LoginController">
    <HBox alignment="CENTER" spacing="50">
        <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png" />
            </image>
        </ImageView>

        <VBox styleClass="login-card" alignment="CENTER" spacing="15" maxWidth="280" maxHeight="450">
            <!-- Title -->
            <Label text="Welcome" styleClass="login-title" />
        <Label text="Log in to continue your fitness journey" styleClass="login-subtitle" />
        
        <!-- Email -->
        <HBox styleClass="login-input-container" alignment="CENTER_LEFT">
             <Label text="ðŸ“§" styleClass="input-icon"/>
             <TextField fx:id="emailField" promptText="Email" HBox.hgrow="ALWAYS" styleClass="login-input"/>
        </HBox>

        <!-- Password -->
        <HBox styleClass="login-input-container" alignment="CENTER_LEFT">
             <Label text="ðŸ”’" styleClass="input-icon"/>
             <StackPane HBox.hgrow="ALWAYS">
                 <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-input" maxWidth="Infinity"/>
                 <TextField fx:id="passwordTextField" promptText="Password" styleClass="login-input" maxWidth="Infinity" visible="false"/>
             </StackPane>
             <Button fx:id="togglePasswordButton" text="ðŸ‘" styleClass="icon-button" onAction="#handleTogglePassword"/> 
        </HBox>

        <Button text="Login" onAction="#handleLogin" maxWidth="Infinity" styleClass="login-button"/>

        <Separator />

        <Hyperlink text="Create an Account" onAction="#handleRegister" styleClass="create-account-link"/>
        </VBox>
    </HBox>
</StackPane>
